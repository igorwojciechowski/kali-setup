configuration {
  show-icons: true;
  font: "Hack Nerd Font Bold 10";
  drun-display-format: "{icon} {name}";
  display-run: " ";
  display-drun: " ";
  display-window: " ";
  modi: "window,run,drun";
}

* {
  background-color: #23252e;
  black: #23252e;
  green: #5ebdac;
  cyan: #49afe6;
  white: #ffffff; 

  lines: 12;
  padding: 0;
  margin: 0;
  spacing: 0;
}

window {
  width: 20%;
  transparency: "real";
  padding: 10;
  border-radius: 5;
}

mainbox {
  children: [inputbar, listview];
}

listview {
  columns: 3;
}

element {
  orientation: horizontal;
  text-color: @white;
  padding: 10;
}

element selected {
  text-color: @green;
}

inputbar {
  background-color: @background-color;
  children: [prompt, entry];
}

prompt {
  enabled: true;
  font: "Hack Nerd Font Bold 12";
  padding: 12 0 0 12;
  text-color: @cyan;
}

entry {
  padding: 12;
  text-color: @cyan;
}

element-text {
  width: 70%;
  background-color: inherit;
  text-color: inherit;
  position: east;
}
